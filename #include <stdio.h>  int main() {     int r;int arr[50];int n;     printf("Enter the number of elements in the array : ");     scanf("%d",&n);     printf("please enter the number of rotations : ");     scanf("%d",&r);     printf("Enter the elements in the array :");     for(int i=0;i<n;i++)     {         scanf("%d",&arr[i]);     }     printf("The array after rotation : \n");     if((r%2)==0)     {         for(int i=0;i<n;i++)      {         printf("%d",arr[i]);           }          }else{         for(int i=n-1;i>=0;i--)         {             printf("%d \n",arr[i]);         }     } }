#include <stdio.h>

int main()
{
    int r;int arr[50];int n;
    printf("Enter the number of elements in the array : ");
    scanf("%d",&n);
    printf("please enter the number of rotations : ");
    scanf("%d",&r);
    printf("Enter the elements in the array :");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("The array after rotation : \n");
    if((r%2)==0)
    {
        for(int i=0;i<n;i++)
     {
        printf("%d",arr[i]);
    
     }
    
    }else{
        for(int i=n-1;i>=0;i--)
        {
            printf("%d \n",arr[i]);
        }
    }
}

